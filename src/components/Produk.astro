---
// src/components/Produk.astro
const produk = [
  { nama: "Beras Organik", kategori: "Pangan", harga: "Rp 65.000", img: "https://images.unsplash.com/photo-1586201375761-83865001e31c?auto=format&fit=crop&q=80&w=400" },
  { nama: "Kopi Robusta", kategori: "Perkebunan", harga: "Rp 45.000", img: "https://images.unsplash.com/photo-1559056199-641a0ac8b55e?auto=format&fit=crop&q=80&w=400" },
  { nama: "Keripik Jamur", kategori: "Olahan", harga: "Rp 15.000", img: "https://images.unsplash.com/photo-1613919113640-25732ec5e61f?auto=format&fit=crop&q=80&w=400" },
  { nama: "Bibit Durian", kategori: "Hortikultura", harga: "Rp 150.000", img: "https://images.unsplash.com/photo-1596706030919-798836528d22?auto=format&fit=crop&q=80&w=400" }
];
---

<section id="produk" class="py-24 bg-slate-900 text-white relative">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <span class="text-yellow-500 font-bold tracking-wider uppercase text-sm">Karya Binaan Kami</span>
      <h2 class="text-3xl md:text-4xl font-bold mt-2 text-white">Produk Unggulan Daerah</h2>
      <div class="w-20 h-1.5 bg-green-600 mx-auto mt-6 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {produk.map((item) => (
        <div class="group bg-slate-800 rounded-2xl overflow-hidden hover:shadow-2xl hover:shadow-green-900/50 transition duration-300 border border-slate-700">
          <div class="h-56 overflow-hidden relative">
            <img src={item.img} alt={item.nama} class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500" />
            <div class="absolute top-3 right-3 bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-lg">
              {item.kategori}
            </div>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-bold text-white mb-1 group-hover:text-yellow-400 transition">{item.nama}</h3>
            <p class="text-gray-400 text-sm mb-4">Produk asli binaan kelompok tani.</p>
            <div class="flex items-center justify-between mt-4 pt-4 border-t border-slate-600">
              <span class="text-xl font-bold text-yellow-500">{item.harga}</span>
              <button class="w-10 h-10 rounded-full bg-white text-slate-900 flex items-center justify-center hover:bg-green-600 hover:text-white transition">+</button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>