---
interface Props {
  role: string;
  names: string[];
  variant?: 'primary' | 'secondary';
}

const { role, names, variant = 'primary' } = Astro.props;
---

<div class={`flex flex-col items-center p-6 bg-white rounded-2xl shadow-sm border-t-4 transition-transform hover:scale-105 ${variant === 'primary' ? 'border-green-500' : 'border-blue-900'}`}>
  <h3 class="text-sm font-bold text-gray-400 uppercase tracking-widest mb-2 text-center">{role}</h3>
  <div class="flex flex-col gap-1 items-center">
    {names.map((name) => (
      <p class="text-lg font-bold text-blue-900 text-center leading-tight">{name}</p>
    ))}
  </div>
</div>